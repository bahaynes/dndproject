# Use the same base image as the production Containerfile for consistency
FROM public.ecr.aws/docker/library/python:3.11-slim

# Set the working directory
WORKDIR /app

# Install system dependencies needed for python packages
# Using the same dependencies as the production build
RUN apt-get update && apt-get install -y \
    build-essential libpq-dev curl \
    && rm -rf /var/lib/apt/lists/*

# Copy only the requirements file to leverage Docker layer caching
COPY backend/requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Add /usr/local/bin to the PATH
ENV PATH="/usr/local/bin:${PATH}"

# Expose the port for the backend server
EXPOSE 8000

# The command will be provided by docker-compose.dev.yml to allow for --reload
