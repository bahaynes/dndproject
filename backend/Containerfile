COPY alembic.ini .
COPY backend/ .

# Make sure Python can find the app module
ENV PYTHONPATH=/app
>>>>>>> origin/main

# Expose backend port
EXPOSE 8000

# Default command
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
